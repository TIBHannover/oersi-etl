{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "resource:/schemas/schema.json",
  "title": "OER",
  "description": "This is a generic JSON schema for describing an Open Educational Resource with schema.org. This is a stricter but compatible version of the LRMI schema (https://dini-ag-kim.github.io/lrmi-profile/draft/schemas/schema.json)",
  "type": "object",
  "properties": {
    "@context": {
      "$ref": "resource:/schemas/context-schema.json"
    },
    "id": {
      "$ref": "resource:/schemas/id.json"
    },
    "type": {
      "$ref": "resource:/schemas/type.json"
    },
    "name": {
      "$ref": "resource:/schemas/name.json"
    },
    "creator": {
      "$ref": "resource:/creator.json"
    },
    "contributor": {
      "$ref": "resource:/contributor.json"
    },
    "description": {
      "$ref": "resource:/description.json"
    },
    "about": {
      "$ref": "resource:/about.json"
    },
    "license": {
      "$ref": "resource:/license.json"
    },
    "image": {
      "$ref": "resource:/image.json"
    },
    "dateCreated": {
      "$ref": "resource:/dateCreated.json"
    },
    "inLanguage": {
      "$ref": "resource:/inLanguage.json"
    },
    "publisher": {
      "$ref": "resource:/publisher.json"
    },
    "learningResourceType": {
      "$ref": "resource:/learningResourceType.json"
    },
    "audience": {
      "$ref": "resource:/audience.json"
    },
    "isBasedOn": {
      "$ref": "resource:/isBasedOn.json"
    },
    "isPartOf": {
      "$ref": "resource:/isPartOf.json"
    },
    "hasPart": {
      "$ref": "resource:/hasPart.json"
    },
    "mainEntityOfPage": {
      "$ref": "resource:/mainEntityOfPage.json"
    },
    "keywords": {
      "$ref": "resource:/keywords.json"
    }
  },
  "required": [
    "@context",
    "id",
    "name",
    "type",
    "mainEntityOfPage"
  ]
}