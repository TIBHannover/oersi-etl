{
    "$id": "https://gitlab.com/oersi/oersi-etl/-/raw/master/src/main/resources/schemas/contributor.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Contributor",
    "description": "Contributor(s) to the creation of the learning resource",
    "type": "array",
    "items": {
      "type": "object",
      "properties": {
        "type": {
          "title": "Type",
          "type": "string",
          "enum": [
            "Person",
            "Organization"
          ]
        },
        "id": {
          "title": "URL",
          "type": "string",
          "format": "uri"
        },
        "name": {
          "title": "Name",
          "type": "string",
          "_display": {
            "placeholder": "The contributors' name"
          }
        }
      },
      "required": [
        "name",
        "type"
      ]
    }
  }